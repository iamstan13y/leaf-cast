<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             xmlns:vms="clr-namespace:LeafCast.ViewModels;assembly=LeafCast"
             x:Class="LeafCast.StatsPage"
             NavigationPage.HasNavigationBar="False"
             Title="StatsPage">

    <ContentPage.BindingContext>
        <vms:TopGradesViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView HeightRequest="2000">
            <Grid BackgroundColor="#D9D9D9">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <lvc:PieChart Series="{Binding Series}" InitialRotation="-90"/>

                <lvc:CartesianChart
        Series="{Binding XSeries}"
        XAxes="{Binding YAxes}"
        LegendPosition="Right"
                    Margin="0,100,0,0"
                    HeightRequest="300" WidthRequest="400">
                </lvc:CartesianChart>
            </Grid>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>